extends layout
block content
    .row
        .col-md-5
            h1= title
        .col-md-3
        .col-md-4
            span Updated:
            a.btn.btn-default(href='/walmart/search') #{lastUpdate.toLocaleString("en-US")}
    table.table.table-hover
        thead
            th Order ID:
            th Order Date:
            th URL:
            th Address:
            th Total:
        tbody
            each order in orders
                tr
                    td #{order.id}
                    td #{order.date}
                    td #{order.url}
                    td #{order.address}
                    td #{order.total}